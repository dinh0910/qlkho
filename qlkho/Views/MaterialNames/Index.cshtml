@model IEnumerable<qlkho.Models.MaterialName>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialTopic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Count)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaterialTopic.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaterialNameID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaterialNameID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaterialNameID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
